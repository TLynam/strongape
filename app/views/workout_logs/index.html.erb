<%- model_class = WorkoutLog.new.class -%>
<div class="page-header">
  <h1>Workouts</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!--<th><%#= model_class.human_attribute_name(:id) %></th>-->
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <!--<th><%#= model_class.human_attribute_name(:created_at) %></th>-->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @workout_logs.each do |workout_log| %>
      <tr>
        <td class="span2"><%= link_to workout_log.date, workout_log_path(workout_log) %></td>
        <td><%= if workout_log.notes[0..90] == "" then "" else workout_log.notes[0..90] + "..." end %></td>
        <td class="span2">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_workout_log_path(workout_log), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      workout_log_path(workout_log),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<table align="center">
<td><%= paginate @workout_logs %></td>
</table>
  <td><%= link_to t('.new', :default => t("helpers.links.new")),
              new_workout_log_path,
              :class => 'btn btn-primary' %></td>
  <td><%= link_to t('.new', :default => t("Import")),
              importlifts_workout_log_path,
              :class => 'btn btn-primary' %></td>
  <td><%= link_to t('.new', :default => t("Show Notes")),
              showallnotes_workout_log_path,
              :class => 'btn btn-success' %></td>
  <td><%= link_to t('.new', :default => t("Show All Workouts")),
              showall_workout_log_path,
              :class => 'btn btn-success' %></td>
  <td><%= link_to t('.new', :default => t("Show Charts")),
              showcharts_workout_log_path,
              :class => 'btn btn-success' %></td>