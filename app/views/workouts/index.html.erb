<h1>Listing workouts</h1>

<table>
  <tr>
    <th>Program week</th>
    <th>Workout day name</th>
    <th>Workout number</th>
    <th>Number of exercises</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workouts.each do |workout| %>
  <tr>
    <td><%= workout.program_week_id %></td>
    <td><%= workout.workout_day_name %></td>
    <td><%= workout.workout_number %></td>
    <td><%= workout.number_of_exercises %></td>
    <td><%= link_to 'Show', workout %></td>
    <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
    <td><%= link_to 'Destroy', workout, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

