<%= form_for(@athletic_program) do |athletic_program_fields| %>

  <% if @athletic_program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@athletic_program.errors.count, "error") %> prohibited this athletic_program from being saved:</h2>
      <ul>
      <% @athletic_program.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h1><%= athletic_program_fields.label :program, "Goal" %> <%= athletic_program_fields.text_field :name, :size => 48 %></h1>
