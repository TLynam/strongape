<div id="notebook">
<p id="notice"><%= notice %></p>

<p align="center">
  <span class="show_definitions">Program Name:</span> <%= @athletic_program.name %><br>
  <span class="show_definitions">Descripton:</span> <%= @athletic_program.description %>
</p>


<% @workouts = Workout.find_all_by_athletic_program_id(@athletic_program.id) %>
<% @workouts.each do |workout| %>
  <span class="show_definitions">Day:</span> <%= workout.day %>

  <div class="show_data">
    <% @exercises = Exercise.find_all_by_workout_id(workout.id) %>
    <% @exercises.each do |exercise| %>
      <span class="show_definitions">Exercise:</span> <%= exercise.name %>

      <div class="show_data">
        <%  @exercise_groups = ExerciseGroup.find_all_by_exercise_id(exercise.id) %>
        <% @exercise_groups.each do |exercise_group| %>
          <%= exercise_group.sets %> <span class="show_definitions">Sets</span>
          <%= exercise_group.reps %> <span class="show_definitions">Reps, </span>
          <span class="show_definitions">Weight/Distance:</span> <%= exercise_group.weight %>,
          <%= exercise_group.percentage_of_max %><span class="show_definitions">% of Max</span><br/>
          <span class="show_definitions">Desccription:</span> <%= exercise_group.description %></br>
        <% end %>
      </div>

    <% end %>
  </div>

<% end %>


<br>
<%= link_to 'Edit', edit_athletic_program_path(@athletic_program) %> |
<%= link_to 'Back', athletic_programs_path %>
</div>