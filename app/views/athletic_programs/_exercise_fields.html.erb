    <%= link_to_remove_fields "Delete", f %><br/>
  </p>
  <%= f.fields_for :exercise_groups do |builder| %>
    <%= render 'exercise_group_fields', :f => builder %>
  <% end %>
  <div class="add_exercise_group_button"><%= link_to_add_fields "Add Exercise Group", f, :exercise_groups %></div>
</div>