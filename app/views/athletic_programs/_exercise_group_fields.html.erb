<p class="fields">
  <form>
    <input type="radio" name="workout_type" class="strength_workout_radio" value="strength_workout" /> Strength Workout<br />
    <input type="radio" name="workout_type" class="cardio_workout_radio" value="cardio_workout" /> Cardio Workout
  </form>
  <br />

  <div class="strength_workout_fields">
  Sets<%= f.select :sets, (1..10), {} %>
  Reps<%= f.select :reps, (1..20), {} %>
  Weight <%= f.text_field :weight , :size => 4 %>
  </div>

  <div class="cardio_workout_fields">
  Distance <%= f.text_field :weight , :size => 4 %>
  </div>

  Desc <%= f.text_field :description, :size => 38 %>
  <%= link_to_remove_fields "Delete", f %><br />
  
</p>

<script type="text/javascript">
$(document).ready(function(){
        $('input[name="workout_type"]:eq(0)').attr('checked', true);
        $('.strength_workout_fields').show();
        $('.cardio_workout_fields').hide();
});

$(document).ready(
  $("input:radio[name=workout_type]").click(function() {
    if ( $(this).val() == 'strength_workout' ){
        $('.strength_workout_fields').show();
        $('.cardio_workout_fields').hide();
    }
    else
    {
        $('.strength_workout_fields').hide();
        $('.cardio_workout_fields').show();
    }
  })
)
;
</script>